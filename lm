#!/bin/bash

# D√©terminer SCRIPT_DIR de mani√®re robuste
if [ -f "$HOME/.lm-cli/java.sh" ]; then
    # Installation standard
    SCRIPT_DIR="$HOME/.lm-cli"
elif [ -f "$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)/java.sh" ]; then
    # Installation portable
    SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
else
    echo "‚ùå Erreur: lm-cli non install√© ou corrompu" >&2
    echo "üí° Ex√©cutez: curl -fsSL https://raw.githubusercontent.com/lmlouis/lm-cli/main/install.sh | bash" >&2
    exit 1
fi

# Ex√©cuter le script principal
exec "$SCRIPT_DIR/java.sh" "$@"