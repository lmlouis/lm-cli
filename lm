#!/bin/bash

# Résout le chemin absolu du script
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

if [ ! -f "$SCRIPT_DIR/java.sh" ]; then
    echo "Le fichier java.sh est introuvable dans $SCRIPT_DIR"
    exit 1
fi

chmod +x "$SCRIPT_DIR/java.sh"

# Exécuter le script directement - il utilisera le répertoire courant de l'utilisateur
"$SCRIPT_DIR/java.sh" "$@"
